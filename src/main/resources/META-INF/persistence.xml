<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence">
    <persistence-unit name="ru.mosigra">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <!--<mapping-file>META-INF/mapping.xml</mapping-file>-->
        <class>ru.mosigra.entity.AchievementEntity</class>
        <class>ru.mosigra.entity.AchievementConditionEntity</class>
        <class>ru.mosigra.entity.ConditionEntity</class>
        <class>ru.mosigra.entity.EventEntity</class>
        <class>ru.mosigra.entity.EventTypeEntity</class>
        <class>ru.mosigra.entity.GameEntity</class>
        <class>ru.mosigra.entity.UserEntity</class>
        <class>ru.mosigra.entity.UserAchievementEntity</class>
        <class>ru.mosigra.entity.UserCanPlayEntity</class>
        <class>ru.mosigra.entity.UserEventEntity</class>
        <class>ru.mosigra.entity.UserWantsToLearnEntity</class>
        <properties>
            <property name="hibernate.connection.url"
              value="jdbc:postgresql://localhost:5432/mosigra"/>
            <property name="hibernate.connection.driver_class"
              value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="postgres"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
